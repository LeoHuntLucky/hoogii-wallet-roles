{
    "manifest_version": 3,
    "name": "Hoogii Wallet",
    "version": "0.0.3",
    "description": "Hoogii is a crypto wallet extension for Chia network",
    "author": "hoogii-app",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "storage",
        "tabs",
        "idle"
    ],
    "action": {
        "default_popup": "index.html"
    }
}